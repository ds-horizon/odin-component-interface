{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "imageRegistry": {
      "type": "string"
    },
    "imageRepository": {
      "type": "string"
    },
    "imageTag": {
      "type": "string"
    },
    "storageClass": {
      "type": "string"
    },
    "nodeSelector": {
      "type": "string"
    },
    "replicaCount": {
      "type": "integer"
    },
    "resources": {
      "type": "object",
      "properties": {
        "limits": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string"
            },
            "memory": {
              "type": "string"
            },
            "ephemeralStorage": {
              "type": "string"
            }
          },
          "required": [
            "cpu",
            "memory",
            "ephemeralStorage"
          ]
        },
        "requests": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string"
            },
            "memory": {
              "type": "string"
            },
            "ephemeralStorage": {
              "type": "string"
            }
          },
          "required": [
            "cpu",
            "memory",
            "ephemeralStorage"
          ]
        }
      },
      "required": [
        "limits",
        "requests"
      ]
    }
  },
  "required": [
    "imageRegistry",
    "imageRepository",
    "imageTag",
    "storageClass",
    "nodeSelector",
    "replicaCount",
    "resources"
  ]
}
